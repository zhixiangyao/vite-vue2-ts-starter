{
  "name": "vite-vue2-ts-starter",
  "type": "module",
  "version": "0.1.0",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "license": "MIT",
  "homepage": "https://github.com/zhixiangyao/vite-vue2-ts-starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-vue2-ts-starter.git"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:css": "stylelint \"./**/*.{vue,postcss,css}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "pinia": "2.0.36",
    "vue": "2.7.16",
    "vue-router": "3.6.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.2.0",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@vitejs/plugin-vue2": "2.3.4",
    "autoprefixer": "10.4.22",
    "dotenv": "17.2.3",
    "eslint": "9.39.1",
    "lint-staged": "16.2.6",
    "postcss-html": "1.8.0",
    "postcss-load-config": "6.0.1",
    "simple-git-hooks": "2.13.1",
    "stylelint": "16.25.0",
    "stylelint-config-recommended-vue": "1.6.1",
    "stylelint-config-standard": "39.0.1",
    "stylelint-order": "7.0.0",
    "tailwindcss": "3.4.17",
    "typescript": "5.9.3",
    "vite": "7.2.2",
    "vue-template-compiler": "2.7.16",
    "vue-tsc": "2.2.10"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.{vue,postcss,css}": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
