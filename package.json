{
  "name": "vite-vue2-ts-starter",
  "type": "module",
  "version": "0.1.0",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "license": "MIT",
  "homepage": "https://github.com/zhixiangyao/vite-vue2-ts-starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-vue2-ts-starter.git"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:stylelint": "stylelint \"./**/*.{vue,postcss,css}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "pinia": "2.3.1",
    "vue": "2.7.16",
    "vue-router": "3.6.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.1.0",
    "@types/node": "22.13.0",
    "@typescript-eslint/eslint-plugin": "8.22.0",
    "@vitejs/plugin-vue2": "2.3.3",
    "@vitejs/plugin-vue2-jsx": "1.1.1",
    "autoprefixer": "10.4.20",
    "dotenv": "16.4.7",
    "eslint": "9.19.0",
    "lint-staged": "15.4.3",
    "postcss-html": "1.8.0",
    "postcss-load-config": "6.0.1",
    "simple-git-hooks": "2.11.1",
    "stylelint": "16.14.1",
    "stylelint-config-recommended-vue": "1.6.0",
    "stylelint-config-standard": "37.0.0",
    "stylelint-order": "6.0.4",
    "tailwindcss": "3.4.15",
    "typescript": "5.7.3",
    "vite": "5.4.11",
    "vue-template-compiler": "2.7.16",
    "vue-tsc": "2.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.{vue,postcss,css}": [
      "stylelint --cache --cache-location node_modules/.cache/stylelint/"
    ]
  }
}
